<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/playerbg">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <LinearLayout
                android:id="@+id/albums"
                android:layout_marginLeft="3dp"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:pointerIcon="hand"
                android:orientation="vertical">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="#000000"
                    android:gravity="center_vertical"
                    android:text="Albums"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

                <ImageView
                    android:id="@+id/imgalbums"
                    android:layout_width="180dp"
                    android:layout_height="220dp"
                    android:background="#FF8C00"
                    app:srcCompat="@drawable/albums" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/chude"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/albums"
                android:pointerIcon="hand"
                android:orientation="vertical">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="#000000"
                    android:gravity="center_vertical"
                    android:text="Chủ Đề"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

                <ImageView
                    android:id="@+id/imgartist"
                    android:layout_width="180dp"
                    android:layout_height="220dp"
                    android:background="#228B22"
                    app:srcCompat="@drawable/artists" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="270dp"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/playlist"
                android:pointerIcon="hand"
                android:orientation="vertical">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="#000000"
                    android:gravity="center_vertical"
                    android:text="Playlist"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

                <ImageView
                    android:id="@+id/imgplaylist"
                    android:layout_height="220dp"
                    android:layout_width="180dp"
                    android:background="#9400D3"
                    app:srcCompat="@drawable/playlist2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/tracks"
                android:layout_toRightOf="@+id/playlist"
                android:pointerIcon="hand"
                android:orientation="vertical">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="#000000"
                    android:gravity="center_vertical"
                    android:text="Bài Hát"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />
                <ImageView
                    android:id="@+id/imgtracks"
                    android:layout_height="220dp"
                    android:layout_width="180dp"
                    android:background="#20B2AA"
                    app:srcCompat="@drawable/tracks" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>