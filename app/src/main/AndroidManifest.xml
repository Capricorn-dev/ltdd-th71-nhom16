<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appmusic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".PlayListActivity" />
        <activity android:name=".ResActivity" />
        <activity android:name=".Main2Activity" />
        <activity android:name="activity.HomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Personal.PersonalPage"
            android:label="AppMusic"
            android:parentActivityName="activity.HomePage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activity.HomePage"/>
        </activity>

        <activity
            android:name=".Personal.AlbumsActivity"
            android:label="Albums"
            android:parentActivityName=".Personal.PersonalPage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Personal.PersonalPage"/>
        </activity>

        <activity
            android:name=".Personal.ArtistsActivity"
            android:label="Artists"
            android:parentActivityName=".Personal.ArtistsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Personal.PersonalPage"/>
        </activity>

    </application>

</manifest>